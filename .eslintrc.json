{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],

        "eqeqeq": "error",

        "no-trailing-spaces": "error",
        "object-curly-spacing": [
            "error", 
            "always"
        ],
        "arrow-spacing": [
            "error", 
            { "before": true, 
            "after": true }
        ],
        "semi": [
            "error",
            "always"
        ],

        "no-console": 0
        
    }
}
